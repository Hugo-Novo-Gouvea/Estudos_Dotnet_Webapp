@page "/"
@using GestaoClientes.Web.Models
@inject HttpClient Http
@inject NavigationManager Navigation 

<PageTitle>Clientes</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Lista de Clientes</h1>
    <button class="btn btn-primary" @onclick="IrParaCriacao">
        + Novo Cliente
    </button>
</div>

@if (clientes == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Status</th>
                <th>Ações</th> </tr>
        </thead>
        <tbody>
            @foreach (var cliente in clientes)
            {
                <tr>
                    <td>@cliente.Id</td>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Email</td>
                    <td>@cliente.Telefone</td>
                    <td>
                        @if(cliente.Ativo) 
                        { 
                            <span class="badge bg-success">Ativo</span> 
                        } 
                        else 
                        { 
                            <span class="badge bg-danger">Inativo</span> 
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-warning me-2" 
                                @onclick="() => IrParaEdicao(cliente.Id)">
                            Editar
                        </button>

                        <button class="btn btn-sm btn-danger" 
                                @onclick="() => DeletarCliente(cliente.Id)">
                            Excluir
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Cliente[]? clientes;

    // URL base da API (Ajuste a porta se necessário)
    private string ApiUrl = "http://localhost:5149/api/clientes"; 

    protected override async Task OnInitializedAsync()
    {
        await CarregarClientes();
    }

    private async Task CarregarClientes()
    {
        clientes = await Http.GetFromJsonAsync<Cliente[]>(ApiUrl);
    }

    // --- A MÁGICA DO DELETE ---
    private async Task DeletarCliente(int id)
    {
        // Chama a API direto: DELETE api/clientes/5
        var resposta = await Http.DeleteAsync($"{ApiUrl}/{id}");

        if (resposta.IsSuccessStatusCode)
        {
            // Atualiza a tabela removendo o item da lista local visualmente
            // (Isso evita ter que ir no banco buscar tudo de novo)
            clientes = clientes?.Where(c => c.Id != id).ToArray();
        }
    }

    // Navegação (Vamos criar essas páginas depois)
    private void IrParaCriacao()
    {
        Navigation.NavigateTo("/cliente/form");
    }

    private void IrParaEdicao(int id)
    {
        Navigation.NavigateTo($"/cliente/form/{id}");
    }
}